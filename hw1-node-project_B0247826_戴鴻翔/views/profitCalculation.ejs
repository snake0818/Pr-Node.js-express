<!DOCTYPE html>

<head>
    <title><%- title %></title>
    <%- include('./partials/head_libs.ejs') %>
        <script>
            //  獲利計算服務
            function po() {
                let num1 = $('#num1').val();
                let num2 = $('#num2').val();
                let n1 = $('#n1').val();
                let n2 = $('#n2').val();
                let p1 = $('#p1').val();
                let p2 = $('#p2').val();
                // 利用ajax呼叫REST API服務
                $.ajax({
                    url: "/profitCalculation",
                    method: "POST",
                    data: { num1, num2, n1, n2, p1, p2 },
                    dataType: "JSON",
                    success: (data) => {
                        $('#result0').val(data.r1);
                        $('#result1').val(data.r2);
                        $('#result2').val(data.r3);
                        $('#result3').val(data.r4);
                    }
                })
            }
            $(function () {
                //  更改手續折扣後執行獲利計算服務
                $('#p1', '#p2').change(() => { po(); });
                $('#btn1').click(() => { po(); });
            })
        </script>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>
        <div class="container text-center mt-5">
            <h1 class="mb-2"><span class="badge bg-danger"><%- title %>服務</span></h1>
            <table class="fs-4 mx-auto mb-3">
                <tr>
                    <th>買入</th>
                    <th>賣出</th>
                </tr>
                <tr>
